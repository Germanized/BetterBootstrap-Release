{
  "name": "betterbootstrapapp",
  "version": "1.0.0",
  "description": "Automatically manage BetterDiscord installation.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder --win portable"
  },
  "keywords": [
    "BetterDiscord",
    "Discord",
    "Installer"
  ],
  "author": "Germanized & Contributors",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^10.0.1",
    "find-process": "^1.4.10",
    "phin": "^3.7.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.electron.betterbootstrap",
    "productName": "BetterBootstrap",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "logic/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}_${version}_Portable.${ext}"
    }
  }
}